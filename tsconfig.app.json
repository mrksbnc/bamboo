{
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"exclude": ["tests/**/*"],
	"compilerOptions": {
		"noEmit": true,
		"strict": true,
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",

		"target": "ESNext",
		"lib": ["ESNext", "DOM"],

		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
