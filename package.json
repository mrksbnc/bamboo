{
	"name": "bamboo-monorepo",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"docs:dev": "turbo run docs:dev",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{ts,md,json,vue}\"",
		"format:check": "prettier --check \"**/*.{ts,md,json,vue}\"",
		"lint": "run-p lint:*",
		"lint:spell": "cspell --config ./cspell.yaml \"**/*.{ts,md,json,vue}\" --verbose --show-perf-summary",
		"lint:oxlint": "pnpm oxlint . --fix",
		"test": "turbo run test",
		"purge": "turbo run purge && rm -rf node_modules .turbo",
		"prepare": "husky",
		"ib": "pnpm install && pnpm build"
	},
	"devDependencies": {
		"@cspell/dict-vue": "^3.0.5",
		"@prettier/plugin-oxc": "^0.1.3",
		"@tailwindcss/vite": "^4.1.18",
		"@tsconfig/node22": "^22.0.5",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^25.0.9",
		"@vitest/coverage-v8": "4.0.17",
		"@vue/test-utils": "^2.4.6",
		"@vueuse/core": "^14.1.0",
		"cspell": "^9.6.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"jsdom": "^27.4.0",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.41.0",
		"oxlint-tsgolint": "^0.11.1",
		"postcss": "^8.5.6",
		"prettier": "^3.8.0",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.18",
		"turbo": "^2.7.5",
		"typescript": "^5.9.3",
		"vite": "8.0.0-beta.8",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.17",
		"vue": "^3.5.26",
		"vue-tsc": "^3.2.2"
	},
	"packageManager": "pnpm@10.28.1"
}
