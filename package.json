{
	"name": "@mrksbnc/bamboo",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{ts,md,json,html,css,scss,yml,yaml,js,cjs,mjs,vue}\"",
		"lint": "run-p lint:*",
		"lint:spell": "cspell --config ./cspell.yaml \"**/*.{ts,md,json,html,css,scss,yml,yaml,js,cjs,mjs,vue}\" --verbose --show-perf-summary",
		"lint:oxlint": "pnpm oxlint . --fix",
		"prepare": "husky",
		"ib": "pnpm install && pnpm build"
	},
	"devDependencies": {
		"@cspell/dict-vue": "^3.0.5",
		"@prettier/plugin-oxc": "^0.1.3",
		"@tailwindcss/vite": "^4.1.17",
		"@tsconfig/node22": "^22.0.5",
		"@types/jsdom": "^27.0.0",
		"@types/node": "^25.0.3",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "4.0.16",
		"cspell": "^9.4.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"jsdom": "^27.3.0",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.38.0",
		"oxlint-tsgolint": "^0.11.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.17",
		"turbo": "^2.7.3",
		"typescript": "^5.9.3",
		"vite": "npm:rolldown-vite@latest",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.16"
	},
	"packageManager": "pnpm@10.27.0"
}
