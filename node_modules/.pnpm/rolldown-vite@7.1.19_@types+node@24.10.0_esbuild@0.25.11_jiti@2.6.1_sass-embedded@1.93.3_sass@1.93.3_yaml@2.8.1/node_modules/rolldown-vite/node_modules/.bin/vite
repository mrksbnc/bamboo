#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Volumes/data/projects/bamboo/node_modules/.pnpm/rolldown-vite@7.1.19_@types+node@24.10.0_esbuild@0.25.11_jiti@2.6.1_sass-embedded@1.93.3_sass@1.93.3_yaml@2.8.1/node_modules/rolldown-vite/bin/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/rolldown-vite@7.1.19_@types+node@24.10.0_esbuild@0.25.11_jiti@2.6.1_sass-embedded@1.93.3_sass@1.93.3_yaml@2.8.1/node_modules/rolldown-vite/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/rolldown-vite@7.1.19_@types+node@24.10.0_esbuild@0.25.11_jiti@2.6.1_sass-embedded@1.93.3_sass@1.93.3_yaml@2.8.1/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Volumes/data/projects/bamboo/node_modules/.pnpm/rolldown-vite@7.1.19_@types+node@24.10.0_esbuild@0.25.11_jiti@2.6.1_sass-embedded@1.93.3_sass@1.93.3_yaml@2.8.1/node_modules/rolldown-vite/bin/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/rolldown-vite@7.1.19_@types+node@24.10.0_esbuild@0.25.11_jiti@2.6.1_sass-embedded@1.93.3_sass@1.93.3_yaml@2.8.1/node_modules/rolldown-vite/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/rolldown-vite@7.1.19_@types+node@24.10.0_esbuild@0.25.11_jiti@2.6.1_sass-embedded@1.93.3_sass@1.93.3_yaml@2.8.1/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/vite.js" "$@"
else
  exec node  "$basedir/../../bin/vite.js" "$@"
fi
