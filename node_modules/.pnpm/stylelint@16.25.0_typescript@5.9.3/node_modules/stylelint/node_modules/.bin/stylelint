#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Volumes/data/projects/bamboo/node_modules/.pnpm/stylelint@16.25.0_typescript@5.9.3/node_modules/stylelint/bin/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/stylelint@16.25.0_typescript@5.9.3/node_modules/stylelint/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/stylelint@16.25.0_typescript@5.9.3/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Volumes/data/projects/bamboo/node_modules/.pnpm/stylelint@16.25.0_typescript@5.9.3/node_modules/stylelint/bin/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/stylelint@16.25.0_typescript@5.9.3/node_modules/stylelint/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/stylelint@16.25.0_typescript@5.9.3/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/stylelint.mjs" "$@"
else
  exec node  "$basedir/../../bin/stylelint.mjs" "$@"
fi
