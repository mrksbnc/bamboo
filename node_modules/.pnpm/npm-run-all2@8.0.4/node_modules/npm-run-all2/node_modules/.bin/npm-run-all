#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules/npm-run-all2/bin/npm-run-all/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules/npm-run-all2/bin/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules/npm-run-all2/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules/npm-run-all2/bin/npm-run-all/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules/npm-run-all2/bin/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules/npm-run-all2/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/npm-run-all2@8.0.4/node_modules:/Volumes/data/projects/bamboo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/npm-run-all/index.js" "$@"
else
  exec node  "$basedir/../../bin/npm-run-all/index.js" "$@"
fi
