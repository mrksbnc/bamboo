{
	"$schema": "https://turborepo.com/schema.json",
	"concurrency": "100%",
	"globalDependencies": ["tsconfig.json", "turbo.json", ".prettierrc.yaml", ".oxlintrc.json"],
	"globalEnv": ["NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["^build", "type-check"],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"src/**",
				"package.json",
				"tsconfig*.json",
				"vite.config.ts"
			],
			"outputs": ["dist/**", ".vitepress/dist/**", "!.turbo/**"],
			"outputLogs": "new-only"
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "**/*.test.ts", "vitest.config.ts"],
			"outputs": ["coverage/**"],
			"outputLogs": "new-only"
		},
		"lint": {
			"dependsOn": ["^lint"],
			"inputs": ["src/**", "**/*.{ts,vue,md,json}"],
			"outputLogs": "new-only"
		},
		"type-check": {
			"dependsOn": ["^type-check"],
			"inputs": ["src/**", "tsconfig*.json", "package.json"],
			"outputLogs": "new-only"
		},
		"format": {
			"inputs": ["**/*.{ts,md,json,vue}"],
			"outputLogs": "new-only"
		},
		"format:check": {
			"inputs": ["**/*.{ts,md,json,vue}"],
			"outputLogs": "new-only"
		},
		"clean": {
			"cache": false
		},
		"docs:dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build"]
		},
		"docs:build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "**/*.md", ".vitepress/**"],
			"outputs": [".vitepress/dist/**"],
			"outputLogs": "new-only"
		}
	},
	"ui": "tui"
}
