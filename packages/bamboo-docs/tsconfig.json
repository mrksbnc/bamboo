{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"types": ["node"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["DOM"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [".vitepress/**/*.ts", "src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
