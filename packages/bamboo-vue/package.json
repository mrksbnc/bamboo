{
  "name": "@mrksbnc/bamboo",
  "version": "1.0.4",
  "type": "module",
  "exports": {
    "./components": {
      "types": "./dist/components/index.d.ts",
      "require": "./dist/components.cjs",
      "import": "./dist/components.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "require": "./dist/core.cjs",
      "import": "./dist/core.js"
    },
    "./lib.css": {
      "import": "./dist/lib.css",
      "require": "./dist/lib.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "vite build --mode production",
    "test": "vitest --coverage",
    "type-check": "vue-tsc --noEmit",
    "lint:oxlint": "oxlint . --fix --config .oxlintrc.json",
    "lint:spell": "cspell . --cache --config cspell.yaml --verbose",
    "lint:style": "stylelint \"**/*.{vue,css,scss}\" --fix --config stylelint.config.js",
    "lint": "run-s lint:*",
    "format": "prettier --write .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview"
  },
  "dependencies": {
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@bamboo/typescript-config": "workspace:*",
    "@prettier/plugin-oxc": "^0.1.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "4.0.15",
    "@vue/test-utils": "^2.4.6",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.3.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.8"
  }
}
