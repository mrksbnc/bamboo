{
	"name": "@mrksbnc/bamboo-vue",
	"version": "0.0.1",
	"description": "Lightweight and flexible Vue 3 components built for the modern web",
	"keywords": [
		"vue",
		"vue3",
		"components",
		"ui",
		"tailwind",
		"component library",
		"typescript"
	],
	"homepage": "https://github.com/mrksbnc/bamboo#readme",
	"bugs": {
		"url": "https://github.com/mrksbnc/bamboo/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mrksbnc/bamboo.git",
		"directory": "packages/bamboo-vue"
	},
	"license": "MIT",
	"author": "Bence Markus",
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.umd.cjs",
			"import": "./dist/index.es.js",
			"default": "./dist/index.es.js"
		},
		"./lib.css": "./dist/lib.css"
	},
	"main": "./dist/index.umd.cjs",
	"module": "./dist/index.es.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"!dist/**/*.test.*"
	],
	"scripts": {
		"build": "pnpm type-check && vite build --mode production",
		"dev": "vite build --watch",
		"format": "prettier --write .",
		"prepublishOnly": "pnpm build",
		"test": "vitest --coverage",
		"type-check": "vue-tsc --noEmit",
		"purge": "rm -rf dist .turbo coverage",
		"prepack": "pnpm build"
	},
	"dependencies": {
		"@vueuse/core": "^14.1.0",
		"@workspace/bamboo-core": "workspace:*"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^6.0.3",
		"@vue/tsconfig": "^0.8.1"
	},
	"peerDependencies": {
		"vue": "^3.5.25"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=9.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
