{
	"name": "@mrksbnc/bamboo-vue",
	"version": "0.0.1",
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		"./components": {
			"types": "./dist/components/index.d.ts",
			"require": "./dist/components.cjs",
			"import": "./dist/components.js"
		},
		"./core": {
			"types": "./dist/core/index.d.ts",
			"require": "./dist/core.cjs",
			"import": "./dist/core.js"
		},
		"./lib.css": {
			"import": "./dist/lib.css",
			"require": "./dist/lib.css"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "vite build --mode production",
		"test": "vitest --coverage",
		"type-check": "vue-tsc --noEmit",
		"lint:oxlint": "oxlint . --fix --config .oxlintrc.json",
		"lint": "run-s lint:*",
		"format": "prettier --write .",
		"prepare": "husky",
		"prepublishOnly": "pnpm build"
	},
	"dependencies": {
		"vue": "^3.5.25"
	},
	"devDependencies": {
		"@types/node": "^25.0.2",
		"@vitejs/plugin-vue": "^6.0.3",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.8.1",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"npm-run-all2": "^8.0.4",
		"vite-plugin-vue-devtools": "^8.0.5",
		"vue-tsc": "^3.1.8"
	}
}
