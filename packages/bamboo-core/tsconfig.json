{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": ["node"],
		"lib": ["DOM", "DOM.Iterable", "ESNext"]
	},
	"include": ["./src/**/*.ts", "**/*.d.ts"],
	"exclude": ["./src/**/*.test.ts", "./src/**/*.spec.ts", "./dist"]
}
